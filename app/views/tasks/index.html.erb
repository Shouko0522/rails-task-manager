<body>
    <h1>My tasks</h1>
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <p><input type="checkbox" name="complete" value="1" checked><%= link_to task.title, task_path(task) %></p>
      <% else %>
        <p><input type="checkbox" value="1" name="completed:" ><%= link_to task.title, task_path(task) %></p>
      <% end %>
    <% end %>
      <p><%= link_to "+ add new task", tasks_new_path %></p>
</body>


